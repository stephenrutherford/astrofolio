---
import Typescript from "./icons/Typescript.astro";
import Next from "./icons/Next.astro";
import Prisma from "./icons/Prisma.astro";
---

<div class={`flex flex-col items-center`}>
  <p class="text-3xl font-bold uppercase">Contact</p>
  <!-- * Wrapper -->
  <div class="flex flex-col gap-4 w-full mt-10 max-w-2xl">
    <!-- ? Component -->
    <form action="submit" method="POST" onSubmit={}>
      <div class="> <div class=" grid grid-cols-1 gap-6">
        <label class="block">
          <span class="text-gray-700">Full name</span>
          <input
            type="text"
            required
            class="mt-1 block w-full bg-brand-secondary rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
            placeholder=""
            value={}
            onChange={}
          />
        </label>
        <label class="block">
          <span class="text-gray-700">Email address</span>
          <input
            type="email"
            required
            class="mt-1 block w-full bg-brand-secondary rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
            placeholder="john@example.com"
            value={}
            onChange={}
          />
        </label>

        <label class="block">
          <span class="text-gray-700">Your Message</span>
          <textarea
            required
            class="mt-1 block w-full bg-brand-secondary rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
            rows="3"
            value={}
            onChange={}
          >
          </textarea>
        </label>

        <button
          type="submit"
          disabled={}
          class="text-white bg-purple-600 hover:bg-blue-500 rounded-lg px-5 py-2.5 text-center mb-2 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:bg-gray-400"
        >
        </button>
      </div>
    </form>
  </div>
</div>
