---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Main from "../layouts/Main.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { Image } from "@astrojs/image/components";
import { Picture } from "@astrojs/image/components";
import rocket from "../assets/ph.jpg";
import placeholder from "../assets/words.png";
import test from "../assets/ph.png";
const linkedin_url = import.meta.env.PUBLIC_LINKEDIN_URL;
---

<!DOCTYPE html>
<Main>
  <div class="col-span-6 space-y-10 min-h-screen border items-center">
    <!-- Start Articles -->
    <div
      class="flex flex-col prose prose-xl prose-invert prose-a:text-gray-400 hover:prose-a:text-gray-300"
    >
      <h1 class="">Contact</h1>
      <p>
        Please use the contact form below and I will reply back to you as soon
        as possible. Alternatively, you can message me on <a href={linkedin_url}
          >LinkedIn</a
        > as well.
      </p>
      <form
        action="https://api.web3forms.com/submit"
        method="POST"
        class="flex flex-col gap-4"
      >
        <input
          type="hidden"
          name="access_key"
          value="ee4787f6-b714-41fa-8ed2-c0031deac627"
        />

        <label class="flex flex-col">
          Your name:
          <input
            type="text"
            name="name"
            placeholder="John Doe"
            class="contact-input"
          />
        </label>
        <label class="flex flex-col">
          Your email:
          <input
            type="email"
            name="email"
            placeholder="you@company.com"
            class="contact-input"
          />
        </label>
        <label class="flex flex-col">
          Your message:
          <textarea
            name="message"
            rows="5"
            placeholder="Your Message"
            class="contact-input"></textarea>
        </label>
        <!-- <input type="hidden" name="redirect" value="" /> -->

        <button
          type="submit"
          class="flex justify-center max-w-[150px] pt-2 pb-2 text-gray-400 hover:text-gray-300 border border-gray-400 hover:border-gray-300"
          >Send</button
        >
      </form>
    </div>
    <!-- End Articles -->
  </div>
</Main>
