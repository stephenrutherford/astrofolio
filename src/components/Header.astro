---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_WIDTH } from "../config";
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";
const github_url = import.meta.env.PUBLIC_GITHUB_URL;
const linkedin_url = import.meta.env.PUBLIC_LINKEDIN_URL;
---

<header class="flex flex-col col-span-8 gap-10 lg:col-span-2 lg:gap-40">
  <div
    class="flex flex-col gap-4 text-center items-center lg:text-left lg:items-start"
  >
    <a href="/" class="text-5xl xl:text-6xl font-bold">
      <p class="text-blue-600">Stephen</p>
      <span class="">Rutherford</span>
    </a>
    <p class="text-xl xl:text-2xl text-gray-500 pb-10 lg:pb-0">
      Fraud analyst & front-end developer.
    </p>
    <div class="hidden lg:flex lg:flex-row lg:items-center lg:gap-6">
      <HeaderLink href={github_url} aria-label="GitHub Profile"
        ><GitHub />
      </HeaderLink>
      <HeaderLink href={linkedin_url} aria-label="LinkedIn Profile"
        ><LinkedIn />
      </HeaderLink>
    </div>

    <!-- TODO: Testing -->
    <div
      class="absolute top-0 right-0 pr-5 pt-5 lg:hidden"
      x-data="{ open: false }"
    >
      <button class="text-6xl" @click="open = ! open">â‰¡</button>

      <div
        class="flex w-screen flex-col bg-gray-900 p-10 gap-10 absolute top-0 right-0 z-10"
        x-show="open"
        @click.outside="open = false"
      >
        <HeaderLink href="/projects" aria-label="List of Projects"
          >Projects</HeaderLink
        >
        <HeaderLink href="/snippets" aria-label="Code Snippets"
          >Snippets</HeaderLink
        >
        <HeaderLink href="/contact" aria-label="How to contact me"
          >Contact</HeaderLink
        >
        <HeaderLink href={github_url} aria-label="GitHub Profile"
          >GitHub</HeaderLink
        >
        <HeaderLink href={linkedin_url} aria-label="LinkedIn Profile"
          >LinkedIn</HeaderLink
        >
      </div>
    </div>

    <!-- ! Desktop Nav -->
    <nav class="hidden lg:flex lg:items-start lg:flex-col lg:gap-4 mt-20">
      <HeaderLink href="/projects" aria-label="List of Projects"
        >Projects</HeaderLink
      >
      <HeaderLink href="/snippets" aria-label="Code Snippets"
        >Snippets</HeaderLink
      >
      <HeaderLink href="/contact" aria-label="How to contact me"
        >Contact</HeaderLink
      >
    </nav>
  </div>
</header>
